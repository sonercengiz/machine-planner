# .env.prod — Production ortamı
# --------------------------------
# Veritabanı (manuel URI override opsiyonel)
POSTGRES_SERVER=db.yourdomain.com
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=prod_password
POSTGRES_DB=fastapi_prod
# Eğer doğrudan URI kullanmak isterseniz:
# SQLALCHEMY_DATABASE_URI=postgresql://prod_user:prod_password@db.yourdomain.com/fastapi_prod

# CORS
BACKEND_CORS_ORIGINS=["https://app.yourdomain.com"]

MAX_MODEL_FILE_SIZE=209715200
MODEL_UPLOAD_DIR=uploaded_models

# JWT
JWT_SECRET_KEY=prod-super-secret-key

# Uygulama ayarları
DEBUG=False
PORT=80
